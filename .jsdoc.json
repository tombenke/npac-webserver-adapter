{
    "opts": {
       "template": "templates/default",
        "encoding": "utf8",
        "destination": "./docs/",
        "recurse": true,
        "readme": "./README.md"
    },
    "sourceType": "module",
    "source": {
        "include": [ "src/" ]
    },
    "plugins": ["plugins/markdown"],
    "markdown": {
        "hardwrap": true
    },
    "templates": {
        "default": {
            "outputSourceFiles": false,
            "includeDate": false
        }
    }
}
