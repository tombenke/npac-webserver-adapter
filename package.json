{
  "name": "npac-webserver-adapter",
  "description": "npac adapter with webServer api, using Express.js",
  "version": "4.0.0",
  "keywords": [
    "cli",
    "util",
    "tool",
    "utility",
    "express"
  ],
  "author": {
    "name": "Tam√°s Benke",
    "email": "tombenke@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/tombenke/npac-webserver-adapter/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/tombenke/npac-webserver-adapter.git"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {},
  "main": "./dist/index.js",
  "dependencies": {
    "axios": "^0.21.1",
    "circular-json-es6": "^2.0.2",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "express-winston": "^4.1.0",
    "express-xml-bodyparser": "^0.3.0",
    "lodash": "^4.17.21",
    "npac": "^2.1.10",
    "npac-pdms-hemera-adapter": "^1.4.11",
    "response-time": "^2.3.2",
    "rest-tool-common": "^2.7.5",
    "serve-index": "^1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/plugin-transform-parameters": "^7.14.5",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.15.0",
    "@babel/register": "^7.15.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "chai": "^4.3.4",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "datafile": "^3.4.3",
    "eslint": "^7.32.0",
    "gulp": "^4.0.2",
    "gulp-debug": "^4.0.0",
    "gulp-markdown": "^6.0.0",
    "gulp-mustache": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-through": "^0.4.0",
    "husky": "^7.0.1",
    "jsdoc": "^3.6.7",
    "lint-staged": "^11.1.2",
    "mocha": "^9.0.3",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0",
    "pre-push": "^0.1.1",
    "prettier": "^2.3.2",
    "qs": "^6.10.1",
    "sinon": "^11.1.2",
    "vinyl-buffer": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint src --ext .js",
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "build": "babel src --presets @babel/preset-env --out-dir dist",
    "lint": "eslint src/**.js",
    "test": "cross-env NODE_ENV=test mocha --recursive --require @babel/register 'src/**/*.spec.js'",
    "test:watch": "npm test -- --watch",
    "test-single": "cross-env NODE_ENV=test mocha --recursive --require @babel/register --timeout 15000 $1",
    "coverage": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text-summary npm run test",
    "docs": "rm -fr ./docs/api/* && jsdoc -c ./.jsdoc.json",
    "docgen": "node_modules/.bin/gulp docgen",
    "precommit": "lint-staged",
    "prettier": "prettier --single-quote --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "prepublishOnly": "npm run prettier && lint-staged && npm run test && npm run build && npm run docs",
    "all": "npm run coverage && npm run build && npm run docs"
  },
  "pre-push": [
    "test"
  ]
}
